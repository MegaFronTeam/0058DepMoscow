mixin comments
	+e.comment-btn.comment-btn-js.btn.BUTTON Оставить комментарий
	+e.comment-body.comment-body-js.visually-hidden
		.sFormInner__comments
			.sFormInner__comments-title Показать комментарии (13)
			.sFormInner__comment-input
				+input('Написать комментарий','textarea').--comment
