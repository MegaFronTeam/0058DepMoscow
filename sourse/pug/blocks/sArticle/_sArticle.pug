mixin commentPerson(img,title,job, job2, text )
	+b.comment-person
		if img
			+e.img-wrap: +img(src=`img/comment-img-${img}.png`, alt="").img-bg
		if !img
			+e.img-wrap.d-flex: +icon('user-desktop')
		+e.descr.small
			+e.item.title.fw-700= title
			+e.item.job= job
			+e.item.job.job2= job2
			.text= text